<html data-bs-theme='light' lang='en'>

  <head>
    <meta charset='utf-8' />
    <meta
      name='viewport'
      content='width=device-width, initial-scale=1.0, shrink-to-fit=no'
    />
    <title>Pricing - BestHotel</title>
    <link rel='stylesheet' href='assets/bootstrap/css/bootstrap.min.css' />
    <link
      rel='stylesheet'
      href='https://fonts.googleapis.com/css?family=Raleway:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800&amp;display=swap'
    />
  </head>

  <body>
    <nav
      class='navbar navbar-expand-md fixed-top navbar-shrink py-3 navbar-light'
      id='mainNav'
    >
      <div class='container'><a
          class='navbar-brand d-flex align-items-center'
          href='/'
        ><span
            style='color: var(--bs-body-color);'
          >HotelReviews</span></a><button
          data-bs-toggle='collapse'
          class='navbar-toggler'
          data-bs-target='#navcol-1'
        ><span class='visually-hidden'>Toggle navigation</span><span
            class='navbar-toggler-icon'
          ></span></button>
        <div class='collapse navbar-collapse' id='navcol-1'>
          <ul class='navbar-nav mx-auto'>
            <li class='nav-item'></li>
          </ul><button class='btn btn-primary btn-dark' type='button'>Who Are We</button><a
            class='btn btn-primary shadow'
            role='button'
            href='signup.html'
          >Add A Review</a>
        </div>
      </div>
    </nav>
    <section class='py-5 mt-5'>
      <div class='container py-4 py-xl-5'>
        <div class='row mb-5'>
          <div class='col-2 text-center mx-auto'>
            <h2 class='display-6 fw-bold mb-4'>Hotels<span
                class='underline'
              ></span></h2>
          </div>
          <div class='col-4 mt-auto' style='text-align: left;'><span
              style='text-align: left;'
            ><span style='color: rgba(18, 22, 67, 0.75);'>Paris, October 14,
                2023</span></span></div>
          <div class='col-5 text-end my-auto'><button
              class='btn btn-primary'
              type='button'
            >Default</button><button
              class='btn btn-outline-primary'
              type='button'
            >A - Z&nbsp;</button><button
              class='btn btn-outline-primary'
              type='button'
            >List View</button></div>
        </div><div><hr /></div>
        <div
          class='row gy-4 row-cols-1 row-cols-md-2 row-cols-lg-3'
          style='margin-bottom: 10px;'
        >
          {{#each hotels}}
            <div class='col'>
              <a href='/hotel/{{this.id}}'><div
                  class='card h-100'
                  style='border-top-left-radius: 9px;border-top-right-radius: 9px;border-bottom-right-radius: 9px;border-bottom-left-radius: 9px;'
                ><img
                    class='card-img-top d-block h-100'
                    src={{this.url_photo}}
                    style='border-top-left-radius: 9px;border-top-right-radius: 9px;'
                  />
                  <div
                    class='card-body'
                    style='background: var(--bs-secondary-bg);'
                  >
                    <div class='row'>
                      <div class='col-9'>
                        <h5><strong>{{this.name}}</strong></h5>
                      </div>
                      <div class='col-3' style='text-align: right;'><span
                          style='color: var(--bs-green);'
                        ><strong>{{this.price}}€</strong></span></div>
                    </div>
                    <div class='row'>
                      <div class='col-10 col-xl-8'>
                        <h6 class='text-muted mb-2'>Hotel de tourisme
                          {{this.stars}}
                          étoiles</h6>
                      </div>
                      <div
                        class='col-2 col-xl-4'
                        style='text-align: right;'
                      ><span class={{this.reviewStatus}}><strong
                          >{{this.percentagePositiveReviews}}

                            %</strong></span></div>
                    </div>
                    <p class='card-text'>{{this.adress}}</p>
                  </div>
                </div></a>
            </div>
          {{/each}}
        </div>
      </div>
    </section>
    <footer></footer>
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js'
    ></script>
    <script src='assets/js/startup-modern.js'></script>
  </body>

</html>